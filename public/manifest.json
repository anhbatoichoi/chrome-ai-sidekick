{
  "manifest_version": 3,
  "name": "Neon AI Agent Chat",
  "version": "1.0",
  "description": "A futuristic AI agent chat application with neon cyberpunk aesthetics",
  
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage"
  ],
  
  "side_panel": {
    "default_path": "index.html"
  },
  
  "action": {
    "default_title": "Open Neon AI Chat",
    "default_icon": {
      "16": "favicon.ico",
      "32": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}